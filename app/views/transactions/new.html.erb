<div class="modal hide fade" id="new-txn-modal">
	<div class="modal-header">
		<h2>Create a transaction for <%= @transaction.envelope.name %> </h2>
	</div>
	<div class="modal-body">
		<%= form_for @transaction do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name %>
		  <br/>
		  <%= f.label :amount %>
		  <%= f.text_field :amount %>
		  <%= f.hidden_field :envelope_id, value: @envelope.id %>
		  <br/>
		  <%= f.submit 'Add' %>
		  <button id="cancel"> Cancel<button>
		<% end %>
	</div>
</div>
<script>
	$('#new-txn-modal').modal('show');
</script>
